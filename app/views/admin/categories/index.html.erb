<h1>Categories</h1>
<table class="table table-striped table-hover table-responsive">
  <th>Category Name</th>
  <th>Options</th>
  <% @categories.each do |category| %>
    <tr><td><%= category.name %></td>
    <td><%= button_to "Edit", admin_edit_category_path(category.name.parameterize), class: "btn btn-success", method: :get %></td></tr>
    <% end %>
</table>
