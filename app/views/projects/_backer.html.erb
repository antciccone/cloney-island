<div class="container-fluid">
  <div class="row">
    <% @project.backers.each do |backer| %>
  <div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
      <% if backer.avatar_file_name.nil? %>
        <td><%= image_tag 'missing.png', size: 200 %></td>
      <% else %>
        <td><%= image_tag backer.avatar.url(:medium) %></td>
      <% end %>
        <div class="caption">
            <h4> <%= backer.name %>
            </h4>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
