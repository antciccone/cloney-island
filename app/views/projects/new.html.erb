<div class="container-fluid">
  <div class="row">
      <h3 class="header-new-project">Fill in project details below to get started!</h3>
          <%= form_for @project do |f| %>
          <div class="form">
            <form class="register-form">
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, size: "50x10" %>
              </div>
              <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :banner_image %>
              </div>
              <div class="form-group">
                <%= f.label :goal %>
                <%= f.text_field :goal, size: "50x10" %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, size: "36x10" %>
              </div>
              <div class="form-group">
                <%= f.collection_select :category_id, @categories,:id,:name, include_blank: true %>
              </div>
            </form>
              <%= f.submit "Create Project!" %>
            </div>
          <%end%>
  </div>
</div>
