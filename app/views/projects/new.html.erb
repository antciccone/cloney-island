<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well text-center">
          <p>
              <small>Fill in Project Details Below</small>
          </p>
          <%= form_for @project do |f| %>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, size: "50x10" %>
              </div>
              <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :banner_image %>
              </div>
              <div class="form-group">
                <%= f.label :goal %>
                <%= f.text_field :goal, size: "50x10" %>
              </div>
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, size: "50x10" %>
              </div>
              <div class="form-group">
                <%= f.collection_select :category_id, @categories,:id,:name, include_blank: true %>
              </div>
              <%= f.submit "Create Project!" %>
        </div>
    </div>
    <%end%>
  </div>
</div>
