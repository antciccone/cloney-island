<br>
<div class="container-fluid">
  <div class="row">
    <% @user.pledges.each do |pledge| %>
    <div class="col-sm-4 col-lg-4 col-md-4">
      <div class="thumbnail">
        <% if pledge.project.banner_image_file_name.nil? %>
          <%= image_tag 'https://source.unsplash.com/collection/410325/400x200' %>
        <% else %>
          <%= image_tag pledge.project.banner_image.url(:small) %>
        <% end %>
        <div class="caption">
          <h4><a href="#"> <%= link_to pledge.project.title, project_path(slug: pledge.project.slug) %> </a>
          </h4>
        </div>
      </div>
      <div class="progress">
  <div class="progress-bar progress-bar-striped" role="successbar" aria-valuenow="<%= pledge.project.funding_received %>" aria-valuemin="0" aria-valuemax="100" style="width:<%= pledge.project.funding_received %>%">
    <%= pledge.project.funding_received %>%
  </div>
</div>
    </div>
    <% end %>
  </div>
</div>
