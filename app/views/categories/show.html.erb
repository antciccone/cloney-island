<center><h1><%= @category.name %></h1></center>
<br>
<div class="container-fluid">
  <div class="row">
    <% @category.projects.each do |project| %>
    <div class="col-sm-4 col-lg-4 col-md-4">
      <div class="thumbnail">
        <% if project.banner_image_file_name.nil? %>
          <%= image_tag 'https://source.unsplash.com/collection/410325/400x200' %>
        <% else %>
          <%= image_tag project.banner_image.url(:small) %>
        <% end %>        
        <div class="caption text-center">
          <h4><a href="#"> <%= link_to project.title, project_path(slug: project.title.parameterize) %> </a>
          </h4>
          <h4>Amount Raised: <%= number_to_currency(project.funding_received) %></h4>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
</br>
